<div class="container">
    <div id="titleBar" class="row justify-content-center align-items-center">
        <h1>Preview Quiz</h1>
        <br>
    </div>
    <h2>Quiz Title = {{quiz.title}}</h2>
    <h3>Quiz Description = {{quiz.description}}</h3>

    {{#if question}}
        <div class="row">
            <div class="col container-fluid">
                {{question-preview question=question selectChoice=(action 'selectChoice') answers=answers}}
            </div>
            <div class="col">
                {{question-navigator quiz=quiz navigateToQuestion=(action (mut questionId))}}
            </div>
        </div>
        <br/>
    {{else}}
        <div class="container">
            <h3>No questions added</h3>
        </div>
    {{/if}}

    <div class="container-fluid">
        <div class="row">
            <div class="col-2"/>
            <div class="col">
                <div class="button-solid">
                    <a href="/quiz/{{quiz.id}}" class="white">
                        <button>Edit Quiz</button>
                    </a>
                </div>
            </div>
            <div class="col-4"/>
            <div class="col">
                <div class="button-solid">
                    <button {{action 'submitQuiz'}}>Submit</button>
                </div>
            </div>
        </div>

        {{#if fetchingResult}}
            <h3> Fetching results ... wait a moment</h3>
        {{/if}}
        {{#if results}}
            <div class="container-fluid">
                <h3 align="center">Results</h3>
                <b>Total Score : {{results.score}}</b>
                <br>
                {{#each results.questions as |quesResult|}}
                    {{question-result res=quesResult}}
                    <br>
                {{/each}}
            </div>
        {{/if}}
    </div>
</div>